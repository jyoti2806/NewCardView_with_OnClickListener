<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="MyData"
            type="com.example.user.mycourse.MyData" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_dark_background">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:imageUrl="@{MyData.image_link}"
            android:padding="8dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image"
            android:background="@android:color/background_dark"
            android:fontFamily="monospace"
            android:gravity="center"
           android:text="@{MyData.description}"
            android:textColor="@color/cardview_light_background"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/table_of_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/description"
            android:layout_centerVertical="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="16dp"
            android:gravity="start"
            android:text="Table of Contents will be shown here"
            />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/table_of_contents"
            android:layout_marginTop="16dp"
            android:background="@android:color/holo_orange_dark"
            android:elevation="10dp"
            android:text="@string/start_course"
            android:textColor="@color/cardview_light_background" />


    </RelativeLayout>
</layout>